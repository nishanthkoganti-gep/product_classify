{
    "name": "amazon_level1",
    "n_gpu": 0,
    "level": 1,
    "arch": {
        "type": "CNNModel",
        "args": {
            "num_classes": 33,
            "embed_file": "amazon.glove.300.csv"
        }
    },
    "data_loader": {
        "type": "AmazonDataLoader",
        "args":{
            "level": 1,
            "shuffle": true,
            "num_workers": 2,
            "batch_size": 64,
            "data_dir": "data/",
            "validation_split": 0.1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy", "acc_top3"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "gamma": 0.1,
            "step_size": 50
        }
    },
    "trainer": {
        "epochs": 15,

        "verbosity": 2,
        "save_period": 1,
        "save_dir": "saved/",
        
        "early_stop": 10,
        "monitor": "min val_loss",

        "tensorboard": true
    }
}
